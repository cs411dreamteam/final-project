doctype=html
html(language=en)
  head
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    
    title CS411 App
  body
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <a class="navbar-brand" href="/">CS411</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
        </ul>
        <a href="/login">
          <button class="btn btn-outline-success my-2 my-sm-0" type="button">Log In</button> 
        </a>
        <a href="/profile" style="margin-left: 1%">
          <button class="btn btn-outline-success my-2 my-sm-0" type="button" style="margin-left: 1%">Profile</button> 
        </a>
      </div>
    </nav>

    <div class="container">
      h1 Too tired to cook? Find food to order tonight

      <form method="POST" action="/">
      <input type="text" placeholder="debug 1 or 0" name="debug">
      <input type="text" placeholder="address or zip code" name="street-address">
      <input type="text" placeholder="meal ingredients" name="meal">
      <input type="text" placeholder="radius (miles)" name="radius">
      <input type="text" placeholder="price limit" name="price">
      select(name='order')
        option(value=0) Max Calories
        option(value=1) Min Calories
        option(value=2) Max Fat
        option(value=3) Min Fat
        option(value=4) Max Carbs
        option(value=5) Min Carbs
        option(value=6) Max Protein
        option(value=7) Min Protein
      <input type="submit" value="Search">
      </form>

      if error
        p #{error}
      else
          p Here is the best food that suits your needs
          <div class="container">
            p Food: #{menuItem.name} </br>
            p Restaurant: #{restaurant.name} - <a href=#{restaurant.url}>#{restaurant.url}</a> </br>
            p= 'Calories: ' + Math.round(menuItem.ENERC_KCAL)
            p= 'Fat: ' + Math.round(menuItem.FAT)
            p= 'Carbohydrates: ' + Math.round(menuItem.CHOCDF)
            p= 'Protein: ' + Math.round(menuItem.PROCNT)
          </div>
          <form method="POST" action="/savesearch">
            <input type="hidden" name="food" value="#{menuItem.name}">
            <input type="hidden" name="restaurant" value="#{restaurant.name}">
            <input type="hidden" name="location" value="#{restaurant.city} #{restaurant.state}">
            <input type="hidden" name="calories" value="#{menuItem.ENERC_KCAL}">
            <input type="hidden" name="fat" value="#{menuItem.FAT}">
            <input type="hidden" name="carbs" value="#{menuItem.CHOCDF}">
            <input type="hidden" name="protein" value="#{menuItem.PROCNT}">
            <input type="hidden" name="link" value="#{restaurant.url}">
            <input type="submit" class="btn btn-dark" value="Save Food">
          </form>
          p Note: Save Food function only works when logged in
          </br>
          </br>

    p Nutrition data powered by #[a(href="https://www.edamam.com/") Edamam]
    img(src="images/edamam_logo.jpg")
    </div>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
